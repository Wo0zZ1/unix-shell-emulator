{
	"name": "terminal-emulator",
	"version": "0.3",
	"main": "src/main.ts",
	"license": "MIT",
	"type": "commonjs",
	"scripts": {
		"build:main": "tsc",
		"build:renderer": "esbuild src/renderer.ts --bundle --outfile=dist/renderer.js --platform=browser --target=es2020",
		"copy:public": "shx mkdir -p dist/public && shx cp -r src/public/* dist/public",
		"build": "npm run build:main && npm run build:renderer && npm run copy:public",
		"start": "electron dist/main.js",
		"start:dev": "electron dist/main.js --vfs \"VFS.xml\"",
		"test:base": "scripts/test-base.bat",
		"test:script": "scripts/test-script.bat",
		"test:vfs": "scripts/test-vfs.bat"
	},
	"author": {
		"name": "Max",
		"email": "Mper06@mail.ru"
	},
	"devDependencies": {
		"@types/node": "^24.3.1",
		"@types/yargs": "^17.0.33",
		"electron": "^38.0.0",
		"electron-builder": "^26.0.12",
		"esbuild": "^0.25.9",
		"shx": "^0.4.0",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"yargs": "^18.0.0"
	}
}
